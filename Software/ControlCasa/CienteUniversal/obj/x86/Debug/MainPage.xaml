<Page
    x:Class="CienteUniversal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CienteUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="btnPolli" Content="Polli" HorizontalAlignment="Stretch" Height="40" Margin="10,10,10,0" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"                       />
        <Button x:ConnectionId='2' x:Name="btnOscar" Content="Oscar" HorizontalAlignment="Stretch" Height="40" Margin="10,55,10,0" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"                       />
        <Button x:ConnectionId='3' x:Name="btnTaller" Content="Taller" HorizontalAlignment="Stretch" Height="40" Margin="10,100,10,0" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"                        />
        <Button x:ConnectionId='4' x:Name="btnBanoAbajoInt" Content="Baño Abajo Interior" HorizontalAlignment="Stretch" Height="40" Margin="10,145,10,0" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"                              />
        <Button x:ConnectionId='5' x:Name="btnBanoAbajoExt" Content="Baño Abajo Exterior" HorizontalAlignment="Stretch" Height="40" Margin="10,190,10,0" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"                              />
        <Button x:ConnectionId='6' x:Name="btnSala" Content="Sala" HorizontalAlignment="Stretch" Height="40" Margin="10,280,10,0" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"                      />
        <Button x:ConnectionId='7' x:Name="btnCocina" Content="Cocina" HorizontalAlignment="Stretch" Height="40" Margin="10,235,10,0" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"                        />
        <Button x:ConnectionId='8' x:Name="btnPatio" Content="Cocina" HorizontalAlignment="Stretch" Height="40" Margin="10,0,10,275" VerticalAlignment="Bottom" d:LayoutOverrides="LeftPosition, RightPosition"                       />
        <Button x:ConnectionId='9' x:Name="btnBanoArribaInt" Content="Baño Arriba Interior" HorizontalAlignment="Stretch" Height="40" Margin="10,0,10,230" VerticalAlignment="Bottom" d:LayoutOverrides="LeftPosition, RightPosition"                               />
        <Button x:ConnectionId='10' x:Name="btnBanoArribaExt" Content="Baño Arriba Exterior" HorizontalAlignment="Stretch" Height="40" Margin="10,0,10,185" VerticalAlignment="Bottom" d:LayoutOverrides="LeftPosition, RightPosition"                               />
        <Button x:ConnectionId='11' x:Name="btnCuartoCosas" Content="Cuarto cosas" HorizontalAlignment="Stretch" Height="40" Margin="10,0,10,140" VerticalAlignment="Bottom" d:LayoutOverrides="LeftPosition, RightPosition"                             />
        <Button x:ConnectionId='12' x:Name="btnVentilador" Content="Ventilador" HorizontalAlignment="Stretch" Height="40" Margin="10,0,10,95" VerticalAlignment="Bottom" d:LayoutOverrides="LeftPosition, RightPosition"                            />

    </Grid>
</Page>

